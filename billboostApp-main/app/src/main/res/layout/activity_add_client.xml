<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".Fragments.AddClient">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_marginVertical="@dimen/_58sdp"
        android:elevation="@dimen/_11sdp"
        app:cardCornerRadius="@dimen/_39sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:id="@+id/tvAddClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Client"
                android:textColor="#091E40"
                android:textSize="@dimen/_28sdp"
                app:layout_constraintBottom_toBottomOf="@id/etClient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/etClient"
                android:layout_width="match_parent"
                android:background="@drawable/et_border"
                android:layout_height="wrap_content"
                android:hint="client name"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_9sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@id/etClientContact"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvAddClient" />
            <EditText
                android:id="@+id/etClientContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_border"
                android:hint="client contact"
                android:inputType="phone"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_9sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@id/etClientEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/etClient" />
            <EditText
                android:id="@+id/etClientEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="client Email"
                android:background="@drawable/et_border"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_9sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@id/etClientAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/etClientContact" />
            <EditText
                android:id="@+id/etClientAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="client Address"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/et_border"
                android:layout_margin="@dimen/_9sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@id/btnAdd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/etClientEmail" />
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D0073368"
                android:text="ADD"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/etClientAddress" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>