<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UpdateCompanyFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_marginVertical="@dimen/_58sdp"
        android:elevation="@dimen/_11sdp"
        app:cardCornerRadius="@dimen/_39sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:id="@+id/tvUpdateCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Company"
                android:textColor="#091E40"
                android:textSize="@dimen/_28sdp"
                app:layout_constraintBottom_toBottomOf="@id/etCompany"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/etCompany"
                android:layout_width="match_parent"
                android:background="@drawable/et_border"
                android:layout_height="wrap_content"
                android:hint="company name"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_9sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@id/etCompanyContact"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvUpdateCompany" />
            <EditText
                android:id="@+id/etCompanyContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_border"
                android:hint="company contact"
                android:inputType="phone"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_9sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@id/etCompanyEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/etCompany" />
            <EditText
                android:id="@+id/etCompanyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="company Email"
                android:background="@drawable/et_border"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_9sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@id/etCompanyAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/etCompanyContact" />
            <EditText
                android:id="@+id/etCompanyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="company Address"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/et_border"
                android:layout_margin="@dimen/_9sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="@id/btnUpdate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/etCompanyEmail" />
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D0073368"
                android:text="UPDATE"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/etCompanyAddress" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>